#ifndef switches_included
#define switches_included

#define SW1 BIT1 //P1.1
#define SW2 BIT2 //P1.2
#define SW3 BIT1 //P2.1
#define SW4 BIT2 //P2.2

#define SWITCHES_P1 (SW1 | SW2)
#define SWITCHES_P2 (SW# | SW4)

void switch_init();
void switch_interrupt_handler();

extern char switch1_pressed, switch2_pressed, switch3_pressed, switch4_pressed;
extern char switch_state_changed;

#endif //included
